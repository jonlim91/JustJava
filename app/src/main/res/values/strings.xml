<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">Just Java</string>

    <!-- Hint for EditText field where customer will enter the name for their order -->
    <string name="customer_name">Name</string>

    <!-- Header text for the list of toppings [CHAR LIMIT=20] -->
    <string name="toppings">Toppings</string>

    <!-- Text for the whipped cream topping  -->
    <string name="whipped_cream">Whipped cream</string>

    <!-- Text for the chocolate topping  -->
    <string name="chocolate">Chocolate</string>

    <!-- Header text for order amount  -->
    <string name="quantity">Quantity</string>

    <!-- Text for the order button to submit the order  -->
    <string name="order">Order</string>

    <!-- Thank you message for the order summary. [CHAR LIMIT=NONE] -->
    <string name="thank_you">Thank you!</string>

    <!--
        Name for the order summary. Will be shown in the format of "Name: Jon" where Jon is the user's name. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_name">Name: <xliff:g id="name" example="Jon">%s</xliff:g></string>

    <!--
        Displays whether customer added whipped cream to their order.
        Will be shown in the format of "Add whipped cream? true" where true indicates the order includes whipped cream. [CHAR LIMIT=NONE]
    -->
    <string name="add_whipped_cream">Add whipped cream? <xliff:g id="whipped_cream" example="true">%s</xliff:g></string>

    <!--
        Displays whether customer added chocolate to their order.
        Will be shown in the format of "Add chocolate? true" where true indicates the order includes chocolate. [CHAR LIMIT=NONE]
    -->
    <string name="add_chocolate">Add chocolate? <xliff:g id="chocolate" example="true">%s</xliff:g></string>

    <!--
        Displays the quantity in the order summary. Will be shown in the format of "Quantity: 2" where 2 is the order total. [CHAR LIMIT=NONE]
    -->
    <string name="order_quantity">Quantity: <xliff:g id="quantity" example="2">%d</xliff:g></string>

    <!--
        Displays the total order price. Will be shown in the format of "Total: $15" where 15 is the price total. [CHAR LIMIT=NONE]
    -->
    <string name="total_price">Total: $<xliff:g id="price" example="15">%d</xliff:g></string>

    <!-- Denotes the max number of items in an order -->
    <string name="max_order_toast">You cannot order more than 100 coffees</string>

    <!-- Denotes the min number of items in an order -->
    <string name="min_order_toast">You cannot order less than 1 coffee</string>

    <!--
        Subject line text for email generated order summary.
        Will be shown in the format of "JustJava order for Jon" where Jon is the user's name. [CHAR LIMIT=NONE]
    -->
    <string name="justjava_order">JustJava order for <xliff:g id="name" example="Jon">%s</xliff:g></string>
</resources>
