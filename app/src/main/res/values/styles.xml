<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for app bar -->
        <item name="colorPrimary">#795548</item>
        <!-- Darker variant for status bar and contextual app bars -->
        <item name="colorPrimaryDark">#8D6E63</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#BCAAA4</item>
    </style>

    <!-- Style for a custom TextView -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
